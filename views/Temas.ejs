<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Skill UP - Criar Curso</title>
  <link rel="stylesheet" href="../../stylesheets/temas.css">
</head>
<body>
  <div class="container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <h1 class="logo">Skill <span>UP</span></h1>
      <nav>
        <a href="#">Dashboard</a>
        <a href="#">Cursos</a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
      <!-- INÍCIO DO FORMULÁRIO -->
      <form class="course-form" action="/admin/cria-curso" method="POST" enctype="multipart/form-data">

        <!-- Upload da capa -->
        <div class="upload-cover">
         <label for="cover-upload" class="upload-box">
          <input type="file" id="cover-upload" name="capa" hidden />
          <div class="upload-icon">⬆</div>
          <p id="upload-text">Upload capa do curso</p>
          <img id="preview" src="" alt="Prévia da capa" style="display: none; max-height: 150px; margin-top: 10px;" />
        </label>

        </div>

        <!-- Inputs principais -->
        <div class="form-grid">
          <input type="text" name="nome" placeholder="Nome do Curso" required />
          <textarea name="descricao" placeholder="Descrição do Curso" required></textarea>
          <select name="categoria" required>
            <option value="">Categoria do Curso</option>
            <option value="JavaScript">JavaScript</option>
            <option value="Python">Python</option>
            <option value="HTML/CSS">HTML/CSS</option>
            <!-- adicione outras opções conforme necessário -->
          </select>
        </div>

        <!-- Lições (aqui apenas exibido visualmente, o envio ainda não está implementado) -->
        <div class="lessons">
          <div class="lesson-card">
            <p>Nome da Lição 1</p>
            <label class="upload-btn">
              <input type="file" name="video1" hidden />
              Upload vídeo
            </label>
          </div>
          <div class="lesson-card">
            <p>Nome da Lição 2</p>
            <label class="upload-btn">
              <input type="file" name="video2" hidden />
              Upload vídeo
            </label>
          </div>
          <div class="lesson-card">
            <p>Nome da Lição 3</p>
            <label class="upload-btn">
              <input type="file" name="video3" hidden />
              Upload vídeo
            </label>
          </div>
          <div class="lesson-card add-lesson">
            <p>+ Adicionar Lição</p>
          </div>
        </div>

        <!-- Botão -->
        <div class="btn-wrapper">
          <button type="submit">Criar Curso</button>
        </div>
      </form>
      <!-- FIM DO FORMULÁRIO -->
    </main>
  </div>

  <script>
  const input = document.getElementById('cover-upload');
  const text = document.getElementById('upload-text');
  const preview = document.getElementById('preview');

  input.addEventListener('change', function () {
    if (input.files && input.files[0]) {
      const fileName = input.files[0].name;
      text.textContent = `Selecionado: ${fileName}`;

      reader.readAsDataURL(input.files[0]);
    }
  });
</script>

</body>
</html>
