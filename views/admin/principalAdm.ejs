<script>
  const cursos = [
    { titulo: 'JavaScript', descricao: 'NOME DO CURSO COMPLETO', professor: 'Nome do professor', img: 'https://upload.wikimedia.org/wikipedia/commons/6/6a/JavaScript-logo.png' },
    { titulo: 'Python', descricao: 'Curso de Python', professor: 'Prof. Python', img: 'https://upload.wikimedia.org/wikipedia/commons/c/c3/Python-logo-notext.svg' }
  ];

  const courseGrid = document.getElementById('courseGrid');
  for(let i=0; i<10; i++) {
    cursos.forEach(curso => {
      const card = document.createElement('div');
      card.classList.add('course-card');
      card.innerHTML = `
        <img src="${curso.img}" alt="${curso.titulo}">
        <h5>${curso.titulo.toUpperCase()}</h5>
        <p>${curso.descricao}</p>
        <span>${curso.professor}</span>
      `;
      courseGrid.appendChild(card);
    });
  }
</script>



        
